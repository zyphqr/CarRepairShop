@using CarRepairShop.ViewModels;
@using CarRepairShop.Common;
@model IndexVM;

@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <br />
    <div class="container">
        <h3>Create new:</h3>
        <br />
        <div class="row">
            <div class="col-4">
                <a asp-controller="Cars" asp-action="Create" class="btn btn-success btn-rounded">Car</a>
            </div>
            <div class="col-4">
                <a asp-controller="Parts" asp-action="Create" class="btn btn-success btn-rounded">Part</a>
            </div>
            <div class="col-4">
                <a asp-controller="RepairCards" asp-action="SelectRepair" class="btn btn-success btn-rounded">Repair card</a>
            </div>
        </div>
        <br />
        <div class="row">
            <a asp-controller="RepairCards" asp-action="References" class="btn btn-primary btn-rounded">Create a reference</a>
        </div>
        <br />
        <h3>Create new repair card for:</h3>
        <br />
        <div class="row">
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.EngineRepair})">
                    <span class="btn btn-primary btn-rounded">Engine repair</span>
                </a>
            </div>
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.CoolingSystemRepair})">
                    <span class="btn btn-primary btn-rounded">Cooling system repair</span>
                </a>
            </div>
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.ExhaustSystemRepair})">
                    <span class="btn btn-primary btn-rounded">Exhaust system repair</span>
                </a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.FuelSystemRepair})">
                    <span class="btn btn-primary btn-rounded">Fuel system repair</span>
                </a>
            </div>
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.ElectricSystemRepair})">
                    <span class="btn btn-primary btn-rounded">Electric system repair</span>
                </a>
            </div>
            <div class="col-4">
                <a href="@Url.Action("CreateFromHome","RepairCards", new{TypeOfRepair = TypeOfRepairs.BrakingSystemRepair})">
                    <span class="btn btn-primary btn-rounded">Braking system repair</span>
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>

