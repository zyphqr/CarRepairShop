
@model IEnumerable<CarRepairShop.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>All cars</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add new car</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Car registration
            </th>
            <th>
                Brand
            </th>
            <th>
                Model
            </th>
            <th>
                Year of manifacture
            </th>
            <th>
                Engine number
            </th>
            <th>
                VIN
            </th>
            <th>
                Color
            </th>
            <th>
                Working volume
            </th>
            <th>
                Description
            </th>
            <th>
                Owner
            </th>
            <th>
                Owner's phone number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarRegistration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfManifacture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingVolume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerPhoneNum)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CarId" class="btn btn-warning">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.CarId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
