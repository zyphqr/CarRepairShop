@using CarRepairShop.Common;
@using CarRepairShop.ViewModels;
@model IndexVMs;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="SelectRepair">Create New</a>
</p>

<form asp-action="References">
    <div class="form-group">
        <label asp-for="Criteria">Criteria</label>
        <select asp-for="Criteria" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(Criteria))">
            <option value="All">All repair cards</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StartEndDate">Start or end date</label>
        <select asp-for="StartEndDate" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(StartEndDate))">
            <option value="Start date">Start date</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-items="Model.CarRegistrations" asp-for="SelectedCarId"></select>
    </div>
    <input type="submit" value="Filter"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Car Registration</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Description</th>
            <th>Price</th>
            <th>Type Of Repair</th>
            <th>Part Names</th>
            <th>Mechanic Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (RepairCardIndexVM item in Model.RepairCards)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarRegistration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfRepair)
                </td>
                <td>
                    @foreach (var part in item.PartNames)
                    {
                        <ul>
                            <li>@part</li>
                        </ul>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MechanicName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RepairCardId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.RepairCardId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


