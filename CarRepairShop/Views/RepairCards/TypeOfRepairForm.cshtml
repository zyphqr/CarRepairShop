@using CarRepairShop.Common;
@using CarRepairShop.ViewModels;
@model CreateEditRepairCardVM;

@{
    ViewData["Title"] = "Select type of repair";
}

<form asp-action="SelectRepair">
    <div class="form-group">
        <label asp-for="TypeOfRepair">Type of repair</label>
        <select asp-for="TypeOfRepair" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(TypeOfRepairs))">
            <option value="Select the type of repair">Select the type of repair</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
